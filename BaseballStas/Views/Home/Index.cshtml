    console.log(result);
    //step 2
    const ctx = document.querySelector("#barChart").getContext('2d');


    //step 3 create the chart
    const myBarChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: mylabels,
            datasets: [
                {
                    label: "Rainfall",
                    data: myData,
                    backgroundColor: [
                        'rgba(0, 255, 0, 0.5)',
                        'rgba(255, 255, 0, 0.5)',
                        'rgba(0, 255, 255, 0.5)',
                        'rgba(125, 255, 150, 0.5)',
                        'rgba(12, 52, 123, 0.5)',
                        'rgba(100, 255, 220, 0.5)',
                    ],
                    borderColor: [
                        '#00000'
                    ],
                    borderWidth: 1,
                }
            ]

        },

        options: {
            response: true,
